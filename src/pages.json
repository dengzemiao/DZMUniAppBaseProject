{
	// 数组(pages)中第一项表示应用启动页（参考：https://uniapp.dcloud.io/collocation/pages）
	"pages": [
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "首页"
			}
		},
		{
			"path": "pages/index/user",
			"style": {
				"navigationBarTitleText": "我的"
			}
		},
		{
			"path": "pages/test/index",
			"style": {
				"navigationBarTitleText": "框架案例"
			}
		},
		{
			"path": "pages/test/request",
			"style": {
				"navigationBarTitleText": "请求案例"
			}
		},
		{
			"path": "pages/test/upload",
			"style": {
				"navigationBarTitleText": "上传案例"
			}
		},
		{
			"path": "pages/test/component",
			"style": {
				"navigationBarTitleText": "组件（easycom）"
			}
		},
		{
			"path": "pages/test/system",
			"style": {
				"navigationBarTitleText": "便捷配置使用"
			}
		},
		{
			"path": "pages/test/video",
			"style": {
				"navigationBarTitleText": "视频案例"
			}
		},
		{
			"path": "pages/test/navbar",
			"style": {
				"navigationBarTitleText": "系统导航栏（上下拉加载）",
				// 开启下拉加载
				"enablePullDownRefresh": true,
				// 距离底部多少距离时触发上拉加载
				"onReachBottomDistance": 0
			}
		},
		{
			"path": "pages/test/navbar-scrollview",
			"style": {
				"navigationBarTitleText": "自定义导航栏（上下拉加载 scrollview）",
				// 自定义导航栏
				"navigationStyle": "custom"
			}
		},
		{
			"path": "pages/test/navbar-mescroll",
			"style": {
				"navigationBarTitleText": "自定义导航栏（上下拉加载 mescroll 插件）",
				// 自定义导航栏
				"navigationStyle": "custom"
			}
		}
	],
	// 全局配置
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "自用 UniApp 模板",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8"
	},
	// tabBar
	"tabBar": {
		"color": "#BFBFBF",
		"selectedColor": "#3E3E40",
		"borderStyle": "black",
		"backgroundColor": "#ffffff",
		"list": [
			{
				"pagePath": "pages/index/index",
				"iconPath": "static/image/tabbar_0.png",
				"selectedIconPath": "static/image/tabbar_select_0.png",
				"text": "首页"
			},
			{
				"pagePath": "pages/index/user",
				"iconPath": "static/image/tabbar_1.png",
				"selectedIconPath": "static/image/tabbar_select_1.png",
				"text": "我的"
			}
		]
	},
	// easycom
	"easycom": {
		"^u-(.*)": "uview-ui/components/u-$1/u-$1.vue"
	}
}
